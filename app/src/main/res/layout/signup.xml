<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_neutral_variant70"
    tools:context=".SignupActivity">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="190dp"
        android:layout_height="56dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:text="Sign up "
        android:textColor="#424141"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText4"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="225dp"
        android:layout_height="47dp"
        android:layout_marginTop="4dp"
        android:background="@color/material_dynamic_neutral_variant60"
        android:text="BudgetBoost          Home         "
        android:textColor="#403F3F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnNEXT"
        android:layout_width="105dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/material_dynamic_neutral_variant60"
        android:text="Logout"
        android:textColor="#454545"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="215dp"
        android:layout_height="27dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="22dp"
        android:text="Sign up to BudgetBoost "
        android:textColor="#494848"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="209dp"
        android:layout_height="22dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="12dp"
        android:text="Have an account? Login here!"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="96dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:text="Username:"
        android:textColor="#2E2E2E"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="94dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="82dp"
        android:text="Password:"
        android:textColor="#353535"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="173dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="66dp"
        android:text="Confirm Password:"
        android:textColor="#3A3939"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        tools:ignore="Autofill,LabelFor" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="207dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3"
        tools:ignore="Autofill,LabelFor" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="108dp"
        android:layout_height="22dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="11dp"
        android:text="...or Sign up via"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="230dp"
        android:layout_height="136dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:srcCompat="@drawable/img_1"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>